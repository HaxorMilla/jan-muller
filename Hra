<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Green Fish Dodge</title>
    <style>
        body {
            text-align: center;
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
        }
        canvas {
            background-color: lightblue;
            display: block;
            margin: 20px auto;
        }
    </style>
</head>
<body>
    <h1>Green Fish Dodge</h1>
    <p>Vyhýbej se červeným rybám a sbírej body! Pohybuj se pomocí šipek.</p>
    <canvas id="gameCanvas" width="400" height="500"></canvas>
    <script>
        const canvas = document.getElementById("gameCanvas");
        const ctx = canvas.getContext("2d");

        let player = { x: 180, y: 450, size: 20, speed: 5 };
        let obstacles = [];
        let score = 0;
        let gameOver = false;

        function drawPlayer() {
            ctx.fillStyle = "green";
            ctx.beginPath();
            ctx.arc(player.x, player.y, player.size, 0, Math.PI * 2);
            ctx.fill();
        }

        function drawObstacles() {
            ctx.fillStyle = "red";
            obstacles.forEach(obs => {
                ctx.beginPath();
                ctx.arc(obs.x, obs.y, obs.size, 0, Math.PI * 2);
                ctx.fill();
            });
        }

        function updateObstacles() {
            obstacles.forEach(obs => {
                obs.y += obs.speed;
                if (obs.y > canvas.height) {
                    obs.y = -10;
                    obs.x = Math.random() * (canvas.width - 20);
                    score++;
                }
                if (Math.hypot(player.x - obs.x, player.y - obs.y) < player.size + obs.size) {
                    gameOver = true;
                }
            });
        }

        function gameLoop() {
            if (gameOver) {
                ctx.fillStyle = "black";
                ctx.font = "20px Arial";
                ctx.fillText("Game Over! Skóre: " + score, 100, 250);
                ctx.fillText("Stiskni R pro restart", 120, 280);
                return;
            }
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            drawPlayer();
            drawObstacles();
            updateObstacles();
            ctx.fillStyle = "black";
            ctx.fillText("Skóre: " + score, 10, 20);
            requestAnimationFrame(gameLoop);
        }

        document.addEventListener("keydown", function(event) {
            if (event.key === "ArrowLeft" && player.x - player.size > 0) {
                player.x -= player.speed;
            }
            if (event.key === "ArrowRight" && player.x + player.size < canvas.width) {
                player.x += player.speed;
            }
            if (event.key === "r" && gameOver) {
                resetGame();
            }
        });

        function resetGame() {
            player.x = 180;
            player.y = 450;
            obstacles = [{ x: Math.random() * 400, y: -20, size: 15, speed: 2 }];
            score = 0;
            gameOver = false;
            gameLoop();
        }

        obstacles.push({ x: Math.random() * 400, y: -20, size: 15, speed: 2 });
        setInterval(() => {
            if (!gameOver) {
                obstacles.push({ x: Math.random() * 400, y: -20, size: 15, speed: 2 + Math.random() });
            }
        }, 2000);
        
        gameLoop();
    </script>
</body>
</html>
